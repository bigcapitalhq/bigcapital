{
  "$schema": "https://json.schemastore.org/nest-cli",
  "collection": "@nestjs/schematics",
  "sourceRoot": "src",
  "entryFile": "main",
  "compilerOptions": {
    "deleteOutDir": true,
    "assets": [
      { "include": "i18n/**/*", "watchAssets": true },
      { "include": "database/**/*", "exclude": "**/*.ts", "watchAssets": true }
    ]
  },
  "projects": {
    "cli": {
      "type": "application",
      "root": "src",
      "entryFile": "cli",
      "sourceRoot": "src",
      "compilerOptions": {
        "tsConfigPath": "tsconfig.json"
      }
    }
  }
}
