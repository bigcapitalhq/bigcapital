{
  "compilerOptions": {
    "esModuleInterop": true,
    "strict": true,
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "types": ["bun-types"],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Bundler",
    "incremental": true,
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["../public/*"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"]
}
